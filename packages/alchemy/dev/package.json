{
  "name": "@alchemy/dev",
  "version": "0.1.0",
  "description": "Development tools, hot-reload bridge, and error boundaries for Alchemy",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "alchemy",
    "development",
    "hot-reload",
    "error-boundaries",
    "devtools"
  ],
  "author": "Alchemy Team",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brendadeeznuts1111/alchmenyrun.git",
    "directory": "packages/alchemy/dev"
  },
  "bugs": {
    "url": "https://github.com/brendadeeznuts1111/alchmenyrun/issues"
  },
  "homepage": "https://github.com/brendadeeznuts1111/alchmenyrun#readme"
}
